<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  </head>
  <body>
    <div class="container ">
      <div class="has-text-danger">
        <h1 style="font-size: 50px;text-align:center ;"><%= title %></h1>
      </div>
      <div class="mt-5 is-flex is-flex-direction-row is-flex-wrap-wrap is-justify-content-space-between" style="width: 1100px; margin-bottom: 10px;">
        <%data.map(function(movie) {%>
          <div class="has-text-primary" style="width:18rem; margin-bottom:16px">
            <h2 class="pb-3" style="font-size: 15px; text-align: center;font-family: monospace;"><%= movie.Title %></h2>
            <a href="./<%= movie.imdbID %>"><img src="<%= movie.Poster %>" style="width:18rem; height:400px;"></a> 
          </div>
          
        <%});%>
      </div>
    </div>
    
  </body>
</html>
